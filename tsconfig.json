{
    "compilerOptions": {
        "checkJs": true,
        "lib": ["ES2023", "DOM"],
        "module": "commonjs",
        "strict": true,
        "outDir": "./build",
        "useUnknownInCatchVariables": false,
        "jsx": "react",
        "jsxFactory": "jsxInTTPG",
        "jsxFragmentFactory": "jsxFrag",
        "rootDir": "./src",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": ["@types/jest", "@types/node", "@tabletop-playground/api"],
        "target": "ES6",
        "baseUrl": "./src",
        "paths": {
            "@mock/*": ["./mock/*"],
            "@wrapper/*": ["./wrapper/*"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
